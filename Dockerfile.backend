FROM python:3.10-alpine as backend-deps

RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.ustc.edu.cn/g' /etc/apk/repositories
RUN apk update
RUN apk add --no-cache gcc g++ pango fontconfig ttf-freefont font-noto terminus-font \
    musl-dev mariadb-dev libffi-dev openssl-dev; \
    fc-cache -f; \
    rm -rf /var/cache/apk/*

WORKDIR /requirements

COPY ./webvirtbackend/requirements/production.txt /requirements/requirements.txt
# COPY ./optional-requirements.txt* /requirements/

RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple
RUN pip install -U pip wheel setuptools
RUN pip install -r requirements.txt
RUN if [ -e optional-requirements.txt ]; then \
    pip install -r optional-requirements.txt; \
    fi

FROM backend-deps AS backend

ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

WORKDIR /backend

COPY ./webvirtbackend/ /backend/